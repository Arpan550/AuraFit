<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/exerciseProgressTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exercise Progress"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/exerciseProgressTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No progress yet"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- PieChart -->
        <com.github.mikephil.charting.charts.PieChart
            android:background="#F2BEFA"
            android:id="@+id/pieChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@id/cardsContainer"
            android:layout_marginTop="16dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>